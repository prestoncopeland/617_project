<h1>Log in</h1>

<div class='well'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :name %>
      <%= text_field_tag :name, params[:name] || '' %>
    </div>
    <div class='control-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] || '' %>
    </div>
    <%= submit_tag "Login", class: 'btn btn-large btn-primary' %>
    <% end %>
  </div>
