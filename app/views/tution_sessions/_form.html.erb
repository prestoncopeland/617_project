<%= form_for(@tution_session) do |f| %>
  <% if @tution_session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tution_session.errors.count, "error") %> prohibited this tution_session from being saved:</h2>

      <ul>
        <% @tution_session.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br/>
    <%= f.text_field :title, :required => true %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description, :required => true %>
  </div>

  <div class="field">
    <%= f.label :start_time, "Starting Date" %><br/>
    <%= f.text_field :start_time_date, :class => "datepicker", :required => true %>&nbsp;&nbsp;
    <%= f.datetime_select :start_time, {:ampm => true, :discard_day => true, :discard_month => true, :discard_year => true,:prompt => {:hour => "Hour", :minute => "Minute"}}, :required => true,:class => "input-small" %>
  </div>

  <div class="field">
    <%= f.label :end_time, "Ending Date" %><br/>
    <%= f.text_field :end_time_date, :class => "datepicker", :required => true %>&nbsp;&nbsp;
    <%= f.datetime_select :end_time, {:ampm => true, :discard_day => true, :discard_month => true, :discard_year => true,:prompt => {:hour => "Hour", :minute => "Minute"}}, :required => true,:class => "input-small" %>
  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-large btn-primary" %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    var nowTemp = new Date();
    var now = new Date(nowTemp.getFullYear(), nowTemp.getMonth(), nowTemp.getDate(), 0, 0, 0, 0);
    $('.datepicker').datepicker({
      "autoclose": true,
      onRender: function(date) {
        return date.valueOf() < now.valueOf() ? 'disabled' : '';
      }
    }).on('changeDate', function(ev){
      $(this).datepicker('hide');
    });
  });
</script>
