<h2>Conversation History</h2>
<div class="span12">
  <div class="span8 message_holder">
    <% if @messages.any?  %>
      <% @messages.each do |m| %>
        <div>
          <%= "#{m.sender_user.name} >> #{m.content}"  %>
        </div>
        <br/>
      <% end %>
    <% else %>
      <h1>Currently Empty</h1>
    <% end %>
  </div>
  <div class="clear">
  </div>
  <div class="span8">
    <%= form_for @message do |f| %>
      <%= f.text_area :content, :placeholder => "Type a message to send.",:rows => 6, :required => true, :style => "width:70%;margin-left:29%;margin-top:30px;" %><br/><br/>
      <%= f.hidden_field :private_forum_id, :value => @private_forum.id %>
      <%= f.submit "Send", :class => "btn btn-large btn-primary pull-right" %>
    <% end %>
  </div>
</div>