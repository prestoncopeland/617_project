<div class="hero-unit">
<%= form_for(@journal_comment) do |f| %>
  <%= render 'shared/error_messages', obj: @journal_comment %>

  <%= f.label :body %>
  <%= f.text_area :body, :cols => "1", :rows => "8", class: "span4" %>

  <br>
  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>
</div>