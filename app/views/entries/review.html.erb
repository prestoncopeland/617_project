<div class="span8" style="background-color: white;color: black;">
  <div class="offset1">
    <h4>Request for Review:</h4>
    <h5>Journal title: <%= @journal.title %> </h5>
    <h5>Entry title: <%= @entry.title %></h5>
    <br/>
    <%= form_for ReviewRequest.new do |f| %>
      <%= f.hidden_field :entry_id, :value => @entry.id %>
      <%= f.label :teacher_id, "Select Teacher" %>
      <%= f.select :teacher_id, options_from_collection_for_select(@teachers, 'id', 'name') %><br/>
      <%= f.text_area :message, :placeholder => "Type your message here.", :rows => 4, :required => true %><br/>
      <%= f.submit "Send Review Request", :class => "btn btn-primary btn-large" %>
    <% end %>
  </div>
</div>